# Production Environment Variables - Scan Master Inspection Pro
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git! (already in .gitignore)

# ============================================
# üö® CRITICAL - MUST BE SET FOR PRODUCTION
# ============================================

# Application Environment
NODE_ENV=production
PORT=5000

# Database (Supabase PostgreSQL)
# Get from: https://supabase.com/dashboard/project/[YOUR_PROJECT]/settings/database
DATABASE_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?sslmode=require

# Supabase Configuration
# Get from: https://supabase.com/dashboard/project/[YOUR_PROJECT]/settings/api
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...YOUR_SERVICE_ROLE_KEY

# Security - GENERATE STRONG RANDOM KEYS!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=YOUR_JWT_SECRET_HERE_64_CHARACTERS_MINIMUM
SESSION_SECRET=YOUR_SESSION_SECRET_HERE_64_CHARACTERS_MINIMUM

# Payment Processing (Lemon Squeezy)
# Get from: https://app.lemonsqueezy.com/settings/api
LEMON_SQUEEZY_API_KEY=YOUR_LEMON_SQUEEZY_API_KEY
LEMON_SQUEEZY_STORE_ID=YOUR_STORE_ID
LEMON_SQUEEZY_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET

# ============================================
# üü† IMPORTANT - RECOMMENDED FOR PRODUCTION
# ============================================

# CORS - Allowed Origins (comma-separated)
CORS_ORIGINS=https://scanmaster.com,https://www.scanmaster.com,https://app.scanmaster.com

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Organization Settings
DEFAULT_ORG_ID=00000000-0000-0000-0000-000000000000
REQUIRE_ORG_MEMBERSHIP=true

# Error Tracking (Sentry)
# Get from: https://sentry.io/settings/[YOUR_ORG]/projects/[YOUR_PROJECT]/keys/
SENTRY_DSN=https://YOUR_KEY@o123456.ingest.sentry.io/123456
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# ============================================
# üü° OPTIONAL - RECOMMENDED FEATURES
# ============================================

# Email Service (SendGrid)
# Get from: https://app.sendgrid.com/settings/api_keys
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SG.YOUR_SENDGRID_API_KEY
FROM_EMAIL=noreply@scanmaster.com
SUPPORT_EMAIL=support@scanmaster.com

# Cloud Storage (AWS S3 for backups/uploads)
# Get from: AWS IAM Console
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=scanmaster-uploads

# Redis Cache (Optional but recommended)
# Get from: Upstash, Redis Cloud, or self-hosted
REDIS_URL=redis://default:YOUR_PASSWORD@redis.example.com:6379
CACHE_TTL=3600

# ============================================
# üîß FEATURE FLAGS
