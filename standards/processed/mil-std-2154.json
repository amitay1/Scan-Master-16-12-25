  "formulas": {
    "metalTravelDistance": {
      "formula": "MTD = 3T rounded to nearest 5mm",
      "description": "Metal travel distance for calibration",
      "variables": {
        "T": "Material thickness in mm",
        "MTD": "Metal travel distance in mm"
      },
      "example": "For T=25mm: MTD = 3×25 = 75mm"
    },
    "scanIndex": {
      "formula": "SI = BW × (1 - C/100)",
      "description": "Maximum scan index for coverage",
      "variables": {
        "SI": "Scan index in mm",
        "BW": "Effective beam width in mm",
        "C": "Required coverage percentage"
      },
      "example": "For BW=10mm, C=100%: SI = 10×(1-100/100) = 10×0.3 = 3mm (70% overlap)"
    },
    "nearFieldDistance": {
      "formula": "N = D²/(4λ)",
      "description": "Near field distance calculation",
      "variables": {
        "N": "Near field distance in mm",
        "D": "Transducer diameter in mm",
        "λ": "Wavelength in mm (V/f)"
      },
      "example": "For D=12.7mm, f=5MHz, V=5900m/s: N = 12.7²/(4×1.18) = 34.2mm"
    },
    "focalZone": {
      "formula": "FZ = 0.7 × F to 1.3 × F",
      "description": "Usable focal zone range for focused transducers",
      "variables": {
        "FZ": "Focal zone range in mm",
        "F": "Focal length in mm"
      },
      "example": "For F=50mm: FZ = 35mm to 65mm"
    },
    "beamSpread": {
      "formula": "θ = sin⁻¹(1.22λ/D)",
      "description": "Half-angle beam spread",
      "variables": {
        "θ": "Beam spread half-angle in degrees",
        "λ": "Wavelength in mm",
        "D": "Transducer diameter in mm"
      }
    }
  },
